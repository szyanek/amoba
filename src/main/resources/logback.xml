<?xml version="1.0" encoding="UTF-8"?> <!--UTF 8 kódolás-->


<configuration> <!--minden beállítás a config tag-en belül kell szerepeljen-->

    <!--appender: név bármi lehet, konzolsa ír ki jelenleg-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

        <encoder> <!--a log sorainak formázáása-->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>

    </appender>


    <!-- csomag beállítása a logoláshoz-->
    <logger name="org.example" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Minden más (külső libek) -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
